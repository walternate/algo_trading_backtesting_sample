<Window x:Class="BackTester.DebugInfoWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageWin" Height="550" Width="500"
        DataContext="{Binding MessageWin, Source={StaticResource Locator}}">
    <Grid>
    <DockPanel>
      <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
        <CheckBox Content="debug" Margin="0,0,5,0" IsChecked="{Binding IsDisplayDebug, Mode=TwoWay}" />
      </StackPanel>
      <ScrollViewer>
        <TextBlock Text="{Binding Message, Mode=OneWay}" />
      </ScrollViewer>
    </DockPanel>
    </Grid>
</Window>
